<div id="wrapper">

    <!-- Sidebar -->
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <!-- <li class="sidebar-brand">
              <%= link_to team_path(@team) do %>
                <img src="<%= @team.img %>" alt="avator image" height='100px' width='100px'>
              <%end%>
              <h4><%= @team.name %></h4>
