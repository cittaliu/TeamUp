<h1>Users#edit</h1>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <div class="text-center">
          <h1>Update Personal Info</h1>
        </div>

        <!-- display flash messages  -->


      </div>
      <%= form_for :user, url: user_path(@user), method: :patch do |f| %>
        <form>
          <fieldset class="form-group">
            <%= f.hidden_field :first_name, class: "form-control", value:current_user.first_name %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.hidden_field :last_name, class: "form-control", value:current_user.last_name %>
          </fieldset>
          <fieldset class="form-group">
            <label for="email">Email</label>
            <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
          </fieldset>
          <fieldset class="form-group">
            <label for="profile_image">Profile Image</label>
            <%= f.text_field :img, class: "form-control", placeholder: "Profile Image URL" %>
          </fieldset>
          <fieldset class="form-group">
            <label for="position">Current Position</label>
            <%= f.text_field :position, class: "form-control", placeholder: "Current Position" %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.submit "Submit", class: "btn btn-primary" %>
          </fieldset>
        </form>
      <% end %>
    </div>
  </div>
</div>
