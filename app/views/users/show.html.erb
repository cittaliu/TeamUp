<div id="wrapper">
        <% if current_user == @user%>
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="/">
                        TeamUp
                    </a>
                </li>
                <% @teams.each do |team| %>
                <li class="team_avator">
                  <%= link_to team_path(team) do %>
                    <img src="<%=team.img %>" height='100px' width='100px'>
                    <% end %>
                    <br>
                </li>
                <% end %>
                <li>
                  <%= link_to new_team_path do %>
                    <img src="http://www.magnetstreet.com/assets/icons/color-wheel-target.svg" height='100px' width='100px'>
                    <% end %>
                </li>

            </ul>
        </div>
        <% end %>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-md-5">
                            <h2>Welcome Back
                                <i><%= @user.first_name%> <%= @user.last_name%>!</i>
                            </h2>
                            <br>
                            <img src="<%= @user.img %>" alt="profile image" height='200px' width='200px'>
                            <br><br><hr>
                            <h4>
                                <i><%= @user.email %></i>
                            </h4>
                            <h4>
                                <i><%= @user.position %></i>
                            </h4>
                            <h5>Joined on
                                <%= @time %></h5>
                                <% if current_user == @user%>
                                <%= link_to "Edit", edit_user_path(@user), class: "btn btn-primary" %>
                                <a href="#menu-toggle" class="btn btn-danger" id="menu-toggle">Switch Team</a>
                                <%end%>
                                <%= link_to "Add", add_user_path(@user),:controller => :team, :action => :add_to_team, method: :POST, class: "btn btn-primary" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>
