<h1>Users#new</h1>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <div class="text-center">
          <h1>Signup!</h1>
        </div>

      </div>
      <%= form_for :user, url: '/users' do |f| %>
        <form>
          <fieldset class="form-group">
            <label for="name">First Name
            </label>
            <%= f.text_field :first_name, class: "form-control", placeholder: "First Name" %>
          </fieldset>
          <fieldset class="form-group">
            <label for="name">Last Name
            </label>
            <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
          </fieldset>
          <fieldset class="form-group">
            <label for="email">Email</label>
            <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
            <% flash.each do |name, msg| %>
            <div id="flash"><i><%= msg %></i></div>
            <% end %>
          </fieldset>
          <fieldset class="form-group">
            <label for="profile_image">Profile Image URL</label>
            <%= f.text_field :img, class: "form-control", placeholder: "Profile Image URL" %>
          </fieldset>
          <fieldset class="form-group">
            <label for="position">Current Position</label>
            <%= f.text_field :position, class: "form-control", placeholder: "Current Position" %>
          </fieldset>
          <fieldset class="form-group">
            <label for="password">Password</label>
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </fieldset>
          <fieldset class="form-group">
            <label for="password_confirmation">Password Confirmation</label>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.submit "Submit", class: "btn btn-primary" %>
          </fieldset>
        </form>
      <% end %>
    </div>
  </div>
</div>
