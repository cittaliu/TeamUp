<h1>Editing Objective</h1>

<%= form_for :objective, url: objective_path(@objective), method: :patch do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :status %>
    <%= f.select :status, ["On Track", "Behind", "At Risk"] %>
  </div>
  <div class="field">
    <%= f.hidden_field :team_id, value: current_team.id %>
  </div>
  <div class="field">
    <%= f.hidden_field :team_id, value: current_user.id %>
  </div>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>

<%= link_to 'Show', @objective %> |
<%= link_to 'Back', objectives_path %>
